{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "env": {
    "node": true
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "extends": ["plugin:shopify/esnext", "prettier"],
  "rules": {
    "no-console": 0,
    "prettier/prettier": 2,
    "no-process-env": 0,
    "babel/camelcase": 0
  },
  "settings": {
    "import/resolver": {
      "typescript": {},
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}
